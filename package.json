{
    "name": "timesub",
    "version": "1.1.2",
    "description": "Simple subscription-based timer",
    "main": "index.js",
    "license": "MIT",
    "keywords": [
        "timer"
    ],
    "homepage": "https://github.com/Noah2610/timesub",
    "repository": "github:Noah2610/timesub",
    "scripts": {
        "build": "tsc",
        "build:watch": "tsc --watch",
        "prebuild": "rm -rf ./dist",
        "postbuild": "cp ./README.md ./LICENSE ./package.json ./dist",
        "test": "jest",
        "test:watch": "jest --watch",
        "docs": "typedoc ./src/index.ts --out ./docs/v${npm_package_version} --includeVersion",
        "example": "bin/run-example"
    },
    "devDependencies": {
        "@types/jest": "^26.0.23",
        "@types/node": "^15.6.1",
        "jest": "^27.0.3",
        "prettier": "^2.3.0",
        "ts-jest": "^27.0.2",
        "ts-node": "^10.0.0",
        "typedoc": "0.21.0-beta.2",
        "typescript": "^4.3.2"
    }
}
